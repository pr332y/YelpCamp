<%- include('../partials/header') %>
<div class="container-fluid">
	<div class="row">
		<div class="mx-auto" style="width: 30%; margin: 25px auto;">
			<h1 class="text-center pb-2">
				Edit <%= campground.name %> 
			</h1>
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="url" value="<%= campground.image %>" name="campground[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.location %>"  name="campground[location]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" value="<%= campground.description %>" name="campground[description]">
				</div>
				<div class="form-group">
					<button type="submit" class="btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>	
			<a href="/campgrounds/<%= campground._id %>/">Go Back</a>
		</div>
	</div>
</div>
<%- include('../partials/footer') %>  